{
  "compilerOptions": {
    "target": "es2019", 
    "module": "commonjs", 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "resolveJsonModule": true, 
    "isolatedModules": true, 
    "noEmit": true, 
    "incremental": true, 
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
